@model IEnumerable<aspBattleArena.Models.Base>

@{
    ViewData["Title"] = "Index";
}

<h1>Bases</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Address
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BaseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BaseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BaseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
